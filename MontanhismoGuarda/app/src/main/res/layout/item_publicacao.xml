<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_publicacao_altura"
    android:paddingLeft="@dimen/md_keylines"
    android:paddingStart="@dimen/md_keylines"
    android:paddingRight="@dimen/md_keylines"
    android:paddingEnd="@dimen/md_keylines"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:id="@+id/itemPublicacao">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tituloPublicacao"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        style="@style/ListItemPrimaryText"
        android:layout_toLeftOf="@+id/imagemPublicacao"
        android:layout_toStartOf="@+id/imagemPublicacao" />

    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum Lorem Ricardum ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum "
        android:id="@+id/excertoPublicacao"
        android:layout_below="@+id/tituloPublicacao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:singleLine="false"
        style="@style/ListItemSecondaryText"
        android:layout_toLeftOf="@+id/imagemPublicacao"
        android:layout_toStartOf="@+id/imagemPublicacao"
        android:maxLines="2" />

    <ImageView
        android:layout_width="@dimen/imagem_publicacao_largura"
        android:layout_height="match_parent"
        android:id="@+id/imagemPublicacao"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_event_black_24dp"/>

</RelativeLayout>